{
  "version": 2,
  "name": "fortune-cookie-ai",
  "alias": ["fortune-cookie-ai"],
  "regions": ["hkg1", "sin1", "hnd1"],
  "framework": "nextjs",
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "installCommand": "npm ci",
  "devCommand": "npm run dev",
  "functions": {
    "app/api/fortune/route.ts": {
      "maxDuration": 30
    },
    "app/api/fortunes/route.ts": {
      "maxDuration": 10
    },
    "app/api/analytics/web-vitals/route.ts": {
      "maxDuration": 10
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "Referrer-Policy",
          "value": "origin-when-cross-origin"
        },
        {
          "key": "X-DNS-Prefetch-Control",
          "value": "on"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots"
    }
  ],
  "redirects": [
    {
      "source": "/fortune-cookies",
      "destination": "/generator",
      "permanent": true
    },
    {
      "source": "/fortune-cookie-generator",
      "destination": "/generator",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/analytics/cleanup",
      "schedule": "0 2 * * *"
    }
  ],
  "env": {
    "NEXT_PUBLIC_APP_NAME": "Fortune Cookie AI",
    "OPENROUTER_BASE_URL": "https://openrouter.ai/api/v1"
  }
}
